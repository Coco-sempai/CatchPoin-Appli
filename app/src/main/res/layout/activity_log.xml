<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iut.catchpoint.catchpoint.LogActivity"
    >

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_login"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titre"
        android:fontFamily="@font/benchnine_regular"
        android:textSize="64sp"
        android:textColor="#353535"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintHorizontal_bias="0.2"
       />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo_catchpoint"
        app:layout_constraintTop_toBottomOf="@+id/titre"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:hint="@string/champLogin"
        android:id="@+id/login"
        android:textAlignment="center"
        android:background="@drawable/rounded_edittext"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:inputType="text"
        android:lines="1" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:hint="@string/champMDP"
        android:id="@+id/motDePasse"
        android:textAlignment="center"
        android:inputType="textPassword"
        android:background="@drawable/rounded_edittext"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login"
        android:layout_marginTop="@dimen/marginTopButton"
        />

    <Button
        android:textAllCaps="false"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/buttonInscription"
        android:id="@+id/inscrire"
        android:fontFamily="@font/benchnine_regular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/motDePasse"
        app:layout_constraintHorizontal_bias="0.15"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_theme"
        android:minHeight="0dp"
        />

    <Button
        android:textAllCaps="false"
        android:layout_width="150dp"
        android:textSize="25sp"
        android:layout_height="wrap_content"
        android:text="@string/buttonConnexion"
        android:fontFamily="@font/benchnine_regular"
        android:id="@+id/connecter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/motDePasse"
        app:layout_constraintHorizontal_bias="0.85"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_theme"
        android:minHeight="0dp"
        />


</android.support.constraint.ConstraintLayout>