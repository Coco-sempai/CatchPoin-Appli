<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D8D8D8">

    <TextView
        android:id="@+id/abandon_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:fontFamily="@font/trebuc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:text="Etes vous sÃ»r de vouloir abandonner ?"
        />

    <ImageView
        android:id="@+id/valid_abandon"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:src="@drawable/ic_check"
        app:layout_constraintTop_toBottomOf="@+id/abandon_check"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cancel_abandon"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/cancel_abandon"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:src="@drawable/ic_abandon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/valid_abandon"
        app:layout_constraintTop_toBottomOf="@+id/abandon_check"
        android:layout_marginTop="30dp"/>

</android.support.constraint.ConstraintLayout>